{
    "name": "bears",
    "version": "1.0.0",
    "author": "Beep  Boop <gpt4.20@proton.me>",
    "license": "MIT",
    "type": "module",
    "devDependencies": {
        "prettier": "^2.8.1",
        "prettier-plugin-solidity": "^1.1.0",
        "solhint": "^3.3.7"
    },
    "scripts": {
        "postinstall": "forge install && forge remappings > remappings.txt",
        "prettier": "prettier --write 'src/**/*.sol'",
        "prettier:list": "prettier --list-different 'src/**/*.sol'",
        "prettier:check": "prettier --check 'src/**/*.sol'",
        "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
        "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
        "lint": "npm run prettier && npm run solhint",
        "lint:check": "npm run prettier:check && npm run solhint:check",
        "test": "forge test",
        "coverage": "forge coverage --report lcov"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "overrides": [
            {
                "files": "*.sol",
                "options": {
                    "explicitTypes": "always"
                }
            }
        ]
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 2021
        },
        "env": {
            "node": true,
            "es6": true
        }
    },
    "dependencies": {}
}
